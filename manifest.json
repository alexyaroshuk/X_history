{
  "manifest_version": 3,
  "name": "X History",
  "description": "This extension tracks the X posts the user views and saves them for later viewing",
  "version": "1.1.0",
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://publish.x.com/*",
    "https://cdn.syndication.twimg.com/*",
    "https://api.fxtwitter.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "default_title": "X History",
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}