{
  "manifest_version": 2,
  "name": "X History",
  "description": "This extension tracks the X posts the user views and saves them for later viewing",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage",
    "tabs",
    "https://publish.twitter.com/",
    "https://api.twitter.com/",
    "https://cdn.syndication.twimg.com/",
    "https://platform.twitter.com/",
    "https://x.com/"
  ],
  "content_security_policy": "script-src 'self' https://platform.twitter.com https://x.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "injectSidebar.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "default_title": "My Extension"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "web_accessible_resources": [
    "sidebar.js",
    "sidebar.html",
    "styles.css"
  ]
}